<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5D658F"
    android:gravity="center">

    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="272dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageBtn"
            android:layout_width="386dp"
            android:layout_height="182dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            tools:srcCompat="@android:drawable/checkbox_on_background"></ImageView>

        <TextView
            android:id="@+id/TXV"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Body mass index calculation completed"
            android:textColor="#01BFAD"
            android:textSize="25dp"
            android:textStyle="italic|bold"></TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/txvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Your BMI:"
        android:textColor="#01BFAD"
        android:textSize="22dp"></TextView>

    <TextView
        android:id="@+id/txvR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="#01BFAD"
        android:textSize="22dp"></TextView>

    <TextView
        android:id="@+id/txvNorm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Norm:"
        android:layout_margin="5dp"
        android:textColor="#01BFAD"
        android:textSize="22dp"></TextView>

    <TextView
        android:id="@+id/txvN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="#01BFAD"
        android:textSize="22dp"></TextView>

    <Button
        android:id="@+id/btnShow"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:backgroundTint="#01BFAD"
        android:onClick="back"
        android:text="Back"
        android:textSize="20dp"></Button>

    <Button
        android:id="@+id/btnExit"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:backgroundTint="#01BFAD"
        android:onClick="exit"
        android:text="Exit"
        android:textSize="16dp"></Button>

</LinearLayout>